#include<iostream>
#include<cmath>
using namespace std;
int main()
{
    char ch;
    float n1,n2;
    cout<<"Enter operator from the following: +,-,*,/,|";
    cin>>ch;
    cout<<"Enter number1: ";
    cin>>n1;
    cout<<"Enter number2: ";
    cin>>n2;
    switch(ch)
    {
        case '+':
        cout<<"Sum="<<n1+n2;
        break;
        case '-':
        cout<<"Difference="<<n1-n2;
        break;
        case '*':
        cout<<"Product="<<n1*n2;
        break;
        case '/':
        cout<<"Division="<<n1/n2;
        break;
        case '|':
        cout<<"Absolute value of number1="<<abs(n1);
        cout<<"Absolute value of number2="<<abs(n2);
        break;
        default:
        cout<<"ERROR";
        break;
    }
}
